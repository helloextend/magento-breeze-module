<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <update handle="breeze_order_extend_warranty" />
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="extendWarranty" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="postPurchaseLeadWarranty" xsi:type="array">
                                <item name="path" xsi:type="string">Extend_WarrantyBreeze/js/order/post-purchase-lead-warranty</item>
                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">warranty/enableExtend/enable</param>
                                </item>
                                <item name="names" xsi:type="array">
                                    <item name="fullname" xsi:type="string">Extend_Warranty/js/order/post-purchase-lead-warranty</item>
                                    <item name="shortname" xsi:type="string">postPurchaseLeadWarranty</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
